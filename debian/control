               libubuntu-app-launch2-dev,
               libubuntu-application-api-dev (>= 2.1.0),
               libudev-dev,
               libunity-api-dev (>= 7.92),
               liburl-dispatcher1-dev,
               libxkbcommon-dev,
               libxrender-dev,
               pkg-config,
               protobuf-compiler,
# lttng-gen-ts needs python3, but doesn't depend on it itself: bug 1359147
