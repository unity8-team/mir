#!/bin/sh

set -e

if [ "$1" = "configure" ];
then
    update-alternatives --force --install \
        /etc/ld.so.conf.d/@DEB_HOST_MULTIARCH@_mir@MIR_PLATFORM_TYPE@.conf \
        @DEB_HOST_MULTIARCH@_mir@MIR_PLATFORM_TYPE@_conf \
        /usr/lib/@DEB_HOST_MULTIARCH@/mir/@MIR_PLATFORM_TYPE@/@MIR_PLATFORM@/ld.so.conf \
        @DPKG_ALTERNATIVES_PRIORITY@

    LDCONFIG_NOTRIGGER=y ldconfig
fi

#DEBHELPER#

exit 0
