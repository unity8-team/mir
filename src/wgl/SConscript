Import('*')

if env['platform'] != 'windows':
    Return()

env = env.Clone()

env.Prepend(LIBS = [
    'winmm',
    'kernel32',
    'user32',
    'gdi32',
    'opengl32',
])

progs = [
    'sharedtex_mt',
    'wglthreads',
]

for prog in progs:
    env.Program(
        target = prog,
        source = prog + '/' + prog + '.c',
    )

env.Program('wglinfo', ['wglinfo.c'])
